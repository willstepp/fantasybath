<!-- logo --> 
<div style="min-width:830px;max-width:950px;margin:0 auto">
  <div style="padding:15px">
     <div style="margin-top:25px;float:left;margin-left:10px;margin-right:10px">
      <a href="<%= root_path %>"><img src="/assets/fb_lady_large.png" style="width:350px"/></a>
    </div>
    <div style="margin-top:75px;padding:30px;background-color:rgba(223, 234, 239, .4);border-radius:1.0em">
      <h1 id="title-logo">Fantasy Bath</h1>
      <h4 style="font-size:1.7em;color:#ffdbcb;padding-top:30px;text-shadow: 0px 1px 3px rgba(0, 0, 0, .5);">Handmade Bath Products</h4>
      <div style="margin-top:75px">
        <h6>Browse our catalog by</h6>
        <div class="btn-group">
          <a type="button" href="<%= catalog_index_path(:scents) %>" class="btn btn-large btn-red <%= @category_type == :scents ? "active" : "" %>">Scents</a>
          <a type="button" href="<%= catalog_index_path(:products) %>" class="btn btn-large btn-red <%= @category_type == :products ? "active" : "" %>">Products</a>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="spacer"/>

<!-- list -->
<div id="content-area">
  <div style="min-width:800px;max-width:920px;margin:0 auto;padding:15px">
    <div style="float:right">
      <form id="filter-form" action="<%= catalog_index_path(:scents, :f => "") %>">
        <select id="filter">
          <% if @category_type == :products %>
            <option value="-1">Filter by product type</option>
            <% @product_types.each do |pt| %>
              <option value="<%= pt.id %>"><%= pt.name %></option>
            <% end %>
          <% end %>
          <% if @category_type == :scents %>
            <option value="-1">Filter by scent category</option>
            <% @scent_categories.each do |sc| %>
              <option value="<%= sc.id %>"><%= sc.name %></option>
            <% end %>
          <% end %>
        </select>
      </form>
    </div>
    <div class="spacer"/>
    <% if @category_type == :products %>
      <% @products.each do |p| %>
        <p>
        <%= link_to p.name, catalog_product_path(p.slug) %>
        </p>
      <% end %>
    <% else %>
      <% @scents.each do |s| %>
        <p>
        <%= link_to s.name, catalog_scent_path(s.slug) %>
        </p>
      <% end %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
    $(function() {
      $('#filter').change(function() {
        var filterId = $(this).val();
        if (filterId != '-1')
        {
          var action = $('#filter-form').attr('action');
          action += filterId;
          $('#filter-form').attr('action', action);
          //$('#filter-form').submit();
        }
      });
    });
</script>