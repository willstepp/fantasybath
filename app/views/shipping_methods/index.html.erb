<h3>Shipping Methods</h3>
<%= link_to "Create a new shipping method", new_shipping_method_path, :class => "btn btn-success btn-small" %>
<br/><br/>
<table class="table">
  <tr>
    <th>Description</th>
    <th>Amount</th>
    <th>Actions</th>
  </tr>
  <% @shipping_methods.each do |sm| %>
    <tr>
      <td><%= sm.description %></td>
      <td><%= number_to_currency(Price.pennies_to_dollars(sm.amount)) %></td>
      <td>
        <%= link_to 'Edit', edit_shipping_method_path(sm) %>&nbsp;
        <%= link_to 'Delete', shipping_method_path(sm), :method => :delete, :style => "color:red", :data => { :confirm => 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>