<p id="notice"><%= notice %></p>
<%= link_to @product.name, edit_product_path(@product), :class => "btn btn-small" %>
<h3>Product Image</h3>
<% if @product_image %>

  <%= image_tag @product_image.url %>

  <%= form_for Image.new, :url => upload_image_path, :html => { :multipart => true } do %>
    <%= hidden_field_tag :id, @product.id %>
    <%= hidden_field_tag :image_id, @product_image.id %>
    <%= file_field_tag :image %>
    <br/><br/>
    <%= submit_tag "Update image", :class => "btn" %>
  <% end %>

  <%= form_tag delete_image_path, :method => :delete do %>
    <%= hidden_field_tag :id, @product.id %>
    <%= hidden_field_tag :image_id, @product_image.id %>
    <%= submit_tag "Delete", :class => "btn btn-small btn-danger", :confirm => "Are you sure you want to delete this image?" %>
  <% end %>

<% else %>

<%= form_for Image.new, :url => upload_image_path, :html => { :multipart => true } do %>
  <%= hidden_field_tag :id, @product.id %>
  <%= file_field_tag :image %>
  <br/><br/>
  <%= submit_tag "Upload new image", :class => "btn" %>
<% end %>

<% end %>
