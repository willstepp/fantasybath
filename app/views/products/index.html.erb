<h1>Products</h1>

<table>
  <tr>
    <th></th>
    <th>Name</th>
    <th>Description</th>
    <th>Actions</th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td>
      <% if !product.images.first.nil? %>
        <%= image_tag product.images.first.url, :style => "width:100px;" %>
      <% end %>
    </td>
    <td>
      <%= product.name %>
    </td>
    <td>
      <%= product.description %>
    </td>
    <td>
      <%= link_to 'Show', product %>&nbsp;
      <%= link_to 'Edit', edit_product_path(product) %>&nbsp;
      <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_product_path %>

<hr/>

<%= link_to "Manage Product Types", product_types_path, :class => "btn btn-small" %>
