<h1>Edit product</h1>
<p>
<% if !@product_image.nil? %>
  <%= image_tag @product_image.url, :style => "width:100px;" %>
<% end %>
<br/>
<%= link_to "Edit image", product_image_path(@product) %>
</p>
<%= link_to "Edit upgrades", upgrades_path(@product) %>
<% if @product.upgrades.count > 0 %>
<p>
  <% @product.upgrades.each do |u| %>
    <%= u.description %>
    <br/>
  <% end %>
  
</p>
<% end %>
<%= render 'form' %>

<%= link_to 'Show', @product %> |
<%= link_to 'Back', products_path %>