<%= link_to "Workshop", workshop_path, :class => "btn btn-small" %>
&nbsp;>&nbsp;
<%= link_to "Products", products_path, :class => "btn btn-small" %>
<hr/>
<h3>Product Types</h3>
<%= link_to "Add product type", new_product_type_path, :class => "btn btn-success" %>
<br/><br/>
<table style="background-color:white" class="table table-striped table-bordered">
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @product_types.each do |pt| %>
  <tr>
    <td>
      <%= link_to pt.name, edit_product_type_path(pt) %>
    </td>
    <td>
      <%= link_to 'Delete', destroy_product_type_path(pt), :method => :delete, :data => { :confirm => 'Are you sure?' }, :style => "color:red" %>
    </td>
  </tr>
<% end %>
</table>