<%= link_to "Workshop", workshop_path, :class => "btn btn-small" %>
<hr/>
<h2>Scents</h2>
<%= link_to 'New scent', new_scent_path, :class => "btn btn-success" %>
&nbsp;
<%= link_to "Manage scent categories", scent_categories_path %>
<br/><br/>
<table class="table table-bordered table-striped" style="background-color:white">
  <tr>
    <th>Name</th>
    <th>Last Updated</th>
    <th></th>
  </tr>

<% @scents.each do |scent| %>
  <tr>
    <td>
      <%= link_to scent.name, edit_scent_path(scent) %>
    </td>
    <td>
      <%= scent.updated_at.localtime.strftime("%m/%d/%Y %I:%M %P") %>
    </td>
    <td>
      <%= link_to 'Delete', scent, method: :delete, data: { confirm: 'Are you sure?' }, :style => "color:red" %>
    </td>
  </tr>
<% end %>
</table>
