<%= link_to "Workshop", workshop_path, :class => "btn btn-small" %>
&nbsp;>&nbsp;
<%= link_to "Scents", scents_path, :class => "btn btn-small" %>
<hr/>
<h3>Scent Categories</h3>
<%= link_to "Add scent category", new_scent_category_path, :class => "btn btn-success" %>
<br/><br/>
<table style="background-color:white" class="table table-striped table-bordered">
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @scent_categories.each do |sc| %>
  <tr>
    <td>
      <%= link_to sc.name, edit_scent_category_path(sc) %>
    </td>
    <td>
      <%= link_to 'Delete', destroy_scent_category_path(sc), :method => :delete, :data => { :confirm => 'Are you sure?' }, :style => "color:red" %>
    </td>
  </tr>
<% end %>
</table>