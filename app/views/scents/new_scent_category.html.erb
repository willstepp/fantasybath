<div class="create-product-type">
<fieldset>
<legend>Add a new scent category</legend>

<%= form_tag create_scent_category_path, :class => "form-horizontal", :method => :post do %>
  <div class="control-group">
    <label class="control-label" for="name">Name</label>
    <div class="controls">
      <input class="span4" type="text" id="name" name="name" value="">
    </div>
  </div>
  <div class="control-group">
  <div class="controls">
    <%= link_to "Cancel", scent_categories_path %>&nbsp;&nbsp;<%= submit_tag "Add it", :class => "btn btn-success" %>
  </div>
  </div>
<% end %>

</fieldset>
</div>